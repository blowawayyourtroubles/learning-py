{
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Launch Program",
      "program": "${input:pythonFile}",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "pythonFile",
      "description": "Select which Python file to debug",
      "options": [
        "${workspaceFolder}/py/project1.py",
        "${workspaceFolder}/py/C.2.1. Introducción Python.ipynb",
        "${workspaceFolder}/py/C.2.2.  Introducción Python.ipynb",
        "${workspaceFolder}/py/handbook-mad_libs.ipynb"
      ]
    }
  ]
}